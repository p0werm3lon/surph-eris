{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",

		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"skipLibCheck": true,

		"strict": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"outDir": "dist/",
	},
	"exclude": [
		"./dist/",
		"node_modules",
		"./node_modules",
		"./node_modules/*",
		"./node_modules/@types/node/index.d.ts"
	]
}
